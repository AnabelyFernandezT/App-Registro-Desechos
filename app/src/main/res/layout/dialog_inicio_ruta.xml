<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/fragment_list"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNombreUsuario"
            android:layout_width="167dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Nombre de Usuario" />

        <TextView
            android:id="@+id/txtSelecionarPlaca"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Placa:" />

        <Spinner
            android:id="@+id/lista_placas"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <EditText
        android:id="@+id/txtKilometraje"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Kilometraje"
        android:maxLines="1"
        android:paddingRight="10dp"
        android:singleLine="true" />


    <!--FOOTER-->
    <LinearLayout
        android:id="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnIniciaRutaCancel"
            android:orientation="horizontal"
            android:background="@drawable/ic_button_skin_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="-4dp"
                    android:clickable="false"
                    android:src="@mipmap/ic_button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="RETORNAR"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/btnIniciaRutaAplicar"
            android:orientation="horizontal"
            android:background="@drawable/ic_button_skin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="APLICAR"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:clickable="false"
                    android:src="@mipmap/ic_button_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


</LinearLayout>

</LinearLayout>
