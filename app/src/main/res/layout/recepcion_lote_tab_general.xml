<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="PESO TOTAL DE LOTE:"
            android:textColor="@color/app_gadere"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPesoTotalLote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="CANTIDAD TOTAL DE BULTOS:"
            android:textColor="@color/app_gadere"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCantidadTotalBultosLote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="NÃšMERO TOTAL DE MANIFIESTOS:"
            android:textColor="@color/app_gadere"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotalNumeroManifiestosLote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="NUMEROS DE MANIFIESTO:"
            android:textColor="@color/app_gadere"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNumerosManifiestoLote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:inputType="text|textMultiLine|textCapCharacters"
            android:textSize="13dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.48"
                android:fontFamily="@font/quicksand_bold"
                android:text="NOMBRE DESECHO:"
                android:textColor="@color/app_gadere"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="PESO DESECHO:"
                android:textColor="@color/app_gadere"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="5dp"
            android:focusable="true"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchViewManifiestos">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>