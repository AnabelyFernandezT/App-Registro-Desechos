<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="20dp"
            android:textColor="@color/app_gadere"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PESO RECOLECTADO:"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtPesoRecolectado"
            android:textSize="20dp"
            android:layout_height="57dp"
            android:layout_width="match_parent"
            android:textStyle="bold" />

        <TextView
            android:textSize="20dp"
            android:textColor="@color/app_gadere"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PESO PLANTA:"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtPeso"
                android:layout_height="57dp"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/border_imput_text"
                android:maxLength="10" />
        </LinearLayout>
        <TextView
            android:textSize="20dp"
            android:textColor="@color/app_gadere"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OBSERVACION DE PESO:"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtNovedad"
                android:layout_height="57dp"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:background="@drawable/border_imput_text"
                android:enabled="false"
                android:layout_weight="1"
                />
            <LinearLayout
                android:id="@+id/btnEvidenciaObservacion"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"
                android:paddingRight="0dp"
                android:layout_margin="1dp">

                <RelativeLayout
                    android:background="@mipmap/ic_camara"
                    android:scaleType="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp" >
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/lnlCountPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_circle"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp">

                        <TextView
                            android:id="@+id/txtCountPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:background="@null"
                            android:padding="0dp"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:textSize="20dp"
            android:textColor="@color/app_gadere"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTRA OBSERVACION:"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtotraNovedad"
                android:layout_height="57dp"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnAgregarFirma"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:background="@drawable/border_dotted"
            android:gravity="center">

            <TextView
                android:id="@+id/txtFirmaPlanta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presione aquÃ­ para firmar" />

            <ImageView
                android:id="@+id/imgFirmaPlanta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </LinearLayout>

