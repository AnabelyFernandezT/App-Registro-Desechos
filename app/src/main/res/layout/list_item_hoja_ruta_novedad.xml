<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="fill_vertical">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <CheckBox
            android:scaleY="1.7"
            android:scaleX="1.7"
            android:id="@+id/chkEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:focusableInTouchMode="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="3dp"
        android:id="@+id/expandedListItem_detalleColocacion">

        <TextView
            android:id="@+id/itm_observaciones"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:textColor="#737373"
            android:text=""
            android:paddingBottom="3dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnEvidenciaNovedadFrecuente"
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingRight="0dp"
        android:layout_margin="1dp">

        <RelativeLayout
            android:background="@mipmap/ic_camara"
            android:scaleType="center"
            android:layout_width="40dp"
            android:layout_height="40dp" >
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lnlCountPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_circle"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <TextView
                    android:id="@+id/txtCountPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@null"
                    android:padding="0dp"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>