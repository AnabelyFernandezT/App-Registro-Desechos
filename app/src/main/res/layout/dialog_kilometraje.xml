<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ResultKilometraje"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Kilometraje inicial Vehículo Anterior:"
                android:textColor="@color/app_gadere"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_kilometraje_inicio"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:textSize="20dp"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:text="@string/inicio_kilometraje"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:ignore="InvalidId" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Kilometraje final Vehículo Anterior:"
                android:textColor="@color/app_gadere"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/kilometrajeFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:maxLines="1"
                android:maxLength="7"
                android:inputType="number|numberDecimal"
                android:paddingRight="10dp"
                android:singleLine="true"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:clickable="true"
                android:id="@+id/btnCancelar"
                android:orientation="horizontal"
                android:background="@drawable/ic_button_skin_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginRight="-4dp"
                        android:clickable="false"
                        android:src="@mipmap/ic_button_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="RETORNAR"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:layout_marginLeft="15dp"
                android:id="@+id/btnSiguiente"
                android:orientation="horizontal"
                android:background="@drawable/ic_button_skin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="SIGUIENTE"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:clickable="false"
                        android:src="@mipmap/ic_button_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>