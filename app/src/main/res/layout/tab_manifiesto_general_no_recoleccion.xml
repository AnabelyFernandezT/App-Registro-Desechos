                    android:id="@+id/txtFirmaMensajeTransportista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presione aquí para firmar" />

                <ImageView
                    android:id="@+id/imgFirmaTecnicoTrasnsportista"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUXILIAR DE RECOLECCIÓN:"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTransRecoAux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRMA:"
                android:textColor="#000"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnAgregarFirmaOperador1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:background="@drawable/border_dotted"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtFirmaMensajeOperador1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presione aquí para firmar" />

                <ImageView
                    android:id="@+id/imgFirmaOperador1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUXILIAR DE RECOLECCIÓN:"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtOperadorRecolector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRMA:"
                android:textColor="#000"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnAgregarFirmaOperadorRecolector"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:background="@drawable/border_dotted"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtFirmaMensajeOperadorRecolector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presione aquí para firmar" />

                <ImageView
                    android:id="@+id/imgFirmaOperadorRecolector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="0.7"
                android:background="#444"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/lblDestinatario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESTINATARIO"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMPRESA DESTINATARIO:"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEmpresaDestinatario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="10" />
