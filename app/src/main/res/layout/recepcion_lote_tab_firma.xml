<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="OBSERVACION:"
            android:textColor="@color/app_gadere"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtotraNovedad"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:background="@drawable/border_imput_text"
                android:inputType="text|textMultiLine|textCapCharacters"
                android:textSize="22dp" />

            <LinearLayout
                android:id="@+id/btnEvidenciaObservacion"
                android:layout_width="42dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="0dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/ic_camara"
                    android:scaleType="center">

                    <LinearLayout
                        android:id="@+id/lnlCountPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/shape_circle"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtCountPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:background="@null"
                            android:padding="0dp"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnAgregarFirma"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:background="@drawable/border_dotted"
            android:gravity="center">

            <TextView
                android:id="@+id/txtFirmaPlanta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presione aquÃ­ para firmar" />

            <ImageView
                android:id="@+id/imgFirmaPlanta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>