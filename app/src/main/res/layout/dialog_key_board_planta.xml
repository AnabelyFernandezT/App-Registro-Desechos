<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="4">

    <LinearLayout
        android:background="@drawable/ic_background_button_keyboard_pant"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="right|center"
        android:text="cabecera "
        app:layout_columnSpan="4"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        app:layout_row="2">
        <TextView
            android:layout_margin="30dp"
            android:text="0"
            android:textStyle="bold"
            android:id="@+id/txtPantallaCalculadora"
            android:textSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_1"
        android:background="@drawable/ic_background_button_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_delete"
        android:background="@drawable/ic_background_button_keyboard_blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="fourth">
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_4"
        android:background="@drawable/ic_background_button_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_ok"
        android:background="@drawable/ic_background_button_keyboard_green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_rowSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="fourth">
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_7"
        android:background="@drawable/ic_background_button_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_decimal"
        android:background="@drawable/ic_background_button_keyboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1">
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:clickable="false"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_button_calc_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_columnSpan="2"
        android:background="@drawable/ic_background_button_keyboard"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" >
        <ImageButton
            android:src="@mipmap/ic_button_calc_cancel"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.gridlayout.widget.GridLayout>