<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/txtContador"
        android:layout_width="411dp"
        android:layout_height="180dp"
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHora"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:text="00:00"
            android:textAlignment="center"
            android:textSize="50dp" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linBotones"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_iniciar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/ic_background_button_keyboard"
            android:gravity="center">

            <ImageButton
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:src="@mipmap/record" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_pausa"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/ic_background_button_keyboard"
            android:gravity="center">

            <ImageButton
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:src="@mipmap/pause1" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/btn_parar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="-65dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:src="@mipmap/stop2" />
        </LinearLayout>



    </LinearLayout>

    <!--FOOTER-->
    <LinearLayout
        android:id="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:clickable="true"
            android:id="@+id/btnCancel"
            android:orientation="horizontal"
            android:background="@drawable/ic_button_skin_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="-4dp"
                    android:clickable="false"
                    android:src="@mipmap/ic_button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="RETORNAR"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/btnAplicar"
            android:orientation="horizontal"
            android:background="@drawable/ic_button_skin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="APLICAR"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:clickable="false"
                    android:src="@mipmap/ic_button_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>

</LinearLayout>
