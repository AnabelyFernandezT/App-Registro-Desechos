<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/app_gadere"
    tools:targetApi="o">
    <item android:id="@android:id/mask"
        android:left="10dp"
        android:right="10dp"
        android:bottom="10dp"
        android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_gadere" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:left="10dp"
        android:right="10dp"
        android:bottom="10dp"
        android:top="10dp">

        <!-- Insert your shape here: -->
        <shape android:shape="rectangle">
            <solid android:color="#E4E4E4"/>
            <corners
                android:radius="20dp"   >
            </corners>
        </shape>

    </item>
</ripple>