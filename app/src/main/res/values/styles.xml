<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@mipmap/ic_background</item>
    </style>

    <style name="TextViewTitleItem" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_green_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11dp</item>
    </style>

    <style name="title_footer">
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textColor">@color/app_text_white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>